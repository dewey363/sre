[Unit]
Description=golangapp on port 8040

[Service]
Type=simple
Restart=always
User=www
Group=www
Environment="PORT=8040"
Environment="APP_VERSION=0.1.0"
Environment="LOG_DIR={{ log_dir }}/golangapp"
Environment="LOAD_BALANCER_URL=http://localhost:80/"
ExecStart={{ apps_dir }}/golangapp/golangapp
ExecStop=/bin/kill -INT $MAINPID
ExecReload=/bin/kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target
