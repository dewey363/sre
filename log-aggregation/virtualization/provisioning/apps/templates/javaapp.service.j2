[Unit]
Description=javaapp on port 8050

[Service]
Type=simple
Restart=always
User=www
Group=www
Environment="DW_PORT=8050"
Environment="DW_VERSION=0.1.0"
Environment="DW_LOG_DIR={{ log_dir }}/javaapp"
ExecStart=/usr/bin/java -jar {{ apps_dir }}/javaapp/javapp-1.0-SNAPSHOT.jar server {{ apps_dir }}/javaapp/config.yml
ExecStop=/bin/kill -INT $MAINPID
ExecReload=/bin/kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target
